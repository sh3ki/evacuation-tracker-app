<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_nav_guidelines"
                android:contentDescription="Guidelines Icon"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Safety Guidelines"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="sans-serif-bold"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Earthquake Safety"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Before Earthquake Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Before Earthquake"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawablePadding="8dp"
                    android:padding="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Prepare emergency kit with food, water, and first aid\n• Secure heavy furniture and appliances\n• Identify safe spots in each room (under sturdy tables)\n• Create family emergency communication plan\n• Know evacuation routes and nearest evacuation centers"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- During Earthquake Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="During Earthquake"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawablePadding="8dp"
                    android:padding="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• DROP, COVER, and HOLD ON\n• Stay indoors if you're inside\n• Move away from windows and heavy objects\n• If outdoors, move to open area away from buildings\n• If driving, pull over and stay in vehicle\n• Stay calm and protect your head and neck"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- After Earthquake Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="After Earthquake"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawablePadding="8dp"
                    android:padding="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Check for injuries and provide first aid\n• Inspect home for damages\n• Expect aftershocks and be prepared\n• Listen to emergency broadcasts\n• Help injured or trapped people\n• Go to designated evacuation center if necessary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
