<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer pulse circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40FF0000" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <!-- Inner solid circle -->
    <item
        android:top="12dp"
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp">
        <shape android:shape="oval">
            <solid android:color="#FF0000" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
    <!-- Center dot -->
    <item
        android:top="18dp"
        android:bottom="18dp"
        android:left="18dp"
        android:right="18dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="12dp"
                android:height="12dp" />
        </shape>
    </item>
</layer-list>
